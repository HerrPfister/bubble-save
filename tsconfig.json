{
  "compilerOptions": {
    "strict": true,
    "target": "ES5",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "lib": ["ES6", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "outDir": "dist/_types",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react",
  },
  "exclude": ["node_modules"]
}
